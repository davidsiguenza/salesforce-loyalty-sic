  font-size: 12px;
  color: var(--text-light);
}

.demo-notice {
  background: #f5f5f5;
  border-radius: 12px;
  padding: 16px;
  display: flex;
  align-items: center;
  gap: 12px;
  font-size: 12px;
  color: var(--text-light);
