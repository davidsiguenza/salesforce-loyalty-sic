  .register-container {
    padding: 16px;
  }
  
  .register-card {
    padding: 20px;
  }
  
  .form-input {
    padding: 12px 14px;
  }
  
  .register-btn {
    padding: 14px;
  }
}

@media (min-width: 768px) {
  .register-container {
    max-width: 480px;
    margin: 0 auto;
    justify-content: center;
  }
}
</style>

<%- include('partials/footer') %>