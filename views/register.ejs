  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24px;
}

.bonus-content {
  flex: 1;
}

.bonus-content h4 {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 4px;
  color: var(--text-color);
}

